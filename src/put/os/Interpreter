

public class Interpreter 
{		
		String nazwa;
		short rejestrA;
		short rejestrB;
		short rejestrC;
		short licznikRozkazow;

		Interpreter()
		{
			
			rejestrA=0;
			rejestrB=0;
			rejestrC=0;
		}
		
		void pobierzRejestry()
		{
			
		}
		
		void wyslijRejestry()
		{
			
		}
		
		void wyswierlStan()
		{
			System.out.println("nazwa procesu: "+nazwa);
			System.out.println("rejestr A: "+rejestrA);
			System.out.println("rejestr B: "+rejestrB);
			System.out.println("rejestr C: "+rejestrC);
			System.out.println("rozkazy: "+licznikRozkazow);
		}
		
		String pobierzRozkaz()
		{
			
		}
		
		void wykonajRozkaz()
		{
			String instrukcja = pobierzRozkaz();
			if(instrukcja!="")
			{
				String rozkaz,rejestr;
				System.out.println("aktualnie wykonywany rozkaz: "+instrukcja);
				rozkaz=instrukcja.substring(0, 2);
				if(rozkaz == "AD")
				{
					rejestr = instrukcja.substring(3,1);
					if(rejestr =="B")
					{
						rejestrA+=rejestrB;
					}
					else
					{
						rejestrA+=rejestrC;
					}
				}
				else if(rozkaz == "SB")//odejmowanie
				{
					rejestr=instrukcja.substring(3,1);
					if(rejestr=="B")
					{
						rejestrA-=rejestrB;
					}
					else
					{
						rejestrA-=rejestrC;
					}
				}
				else if(rozkaz == "MP")//mnozenie
				{
					rejestr = instrukcja.substring(3,1);
					if(rejestr =="B")
					{
						rejestrA*=rejestrB;
					}	
					else
					{
						rejestrA*=rejestrC;
					}
				}
				else if(rozkaz=="IC")//inkrementacja
				{
					rejestr=instrukcja.substring(3,1);
					if(rejestr == "A")
						{
						rejestrA++;
						}
					else if(rejestr == "B")
					{
						rejestrB++;
					}
					else
					{
						rejestrC++;
					}
				}
				else if(rozkaz=="MV")
				{
					rejestr = instrukcja.substring(3,1);
					String wartosc;
					wartosc = instrukcja.substring(5,3);
					int liczba = 0;
					
				}
			}
		}
		

}
